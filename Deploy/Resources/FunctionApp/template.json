{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {        
        "functionAppName": {
            "type": "string",
            "metadata": {
                "description": "The name of the function app that you wish to create."
            }
        },
        "sgName": {
            "type": "string",
            "metadata": {
                "description": "The storage account name where the function app's code will execute."
            }
        },
        "planName": {
            "type": "string",
            "metadata": {
                "description": "The name of app service plan which the function app will be using."
            }
        },
        "keyVaultName": {
            "type": "string",
            "metadata": {
                "description": "The name of the key vault which the function app will be using."
            }
        },        
        "topicName": {
            "type": "string",
            "defaultValue": "customer-orders"
        },
        "subscriptionName": {
            "type": "string",
            "defaultValue": "all"
        },
        "serviceBusName":{
            "type": "string",
            "defaultValue": "TBD"
        }
    },
    "variables": {
        "serviceBusNamespace": "[concat(parameters('serviceBusName'),'servicebus.windows.net')]",
        "appInsightsKeySecret": "[concat('@Microsoft.KeyVault(SecretUri=https://', parameters('keyVaultName'), '.vault.azure.net/secrets/appInsightsKeySecret/)')]",
        "storageAccountConnectionStringSecret": "[concat('@Microsoft.KeyVault(SecretUri=https://', parameters('keyVaultName'), '.vault.azure.net/secrets/storageAccountConnectionStringSecret/)')]",
        "timeZone": "AUS Eastern Standard Time"
    },
    "resources": [
        {
            "apiVersion": "2015-08-01",
            "type": "Microsoft.Web/sites",
            "name": "[parameters('functionAppName')]",
            "identity": {
                "type": "SystemAssigned"
            },
            "location": "[resourceGroup().location]",
            "kind": "functionapp",
            "resources": [
                {
                    "name": "slotConfigNames",
                    "type": "config",
                    "apiVersion": "2018-11-01",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/Sites', parameters('functionAppName'))]"
                    ],
                    "tags": {
                        "displayName": "slotConfigNames"
                    },
                    "properties": {
                        "appSettingNames": [
                            "CustomerApiKey"
                        ]
                    }
                },
                {
                    "type": "config",
                    "name": "appsettings",
                    "apiVersion": "2018-11-01",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites', parameters('functionAppName'))]"
                    ],
                    "properties": {
                        "CustomerApiKey": "This is the production setting.",
                        "ServiceBusConfig:Topic": "[parameters('topicName')]",
                        "ServiceBusConfig:Subscription": "[parameters('subscriptionName')]",
                        "ServiceBusConfig:FullyQualifiedNamespace": "[variables('serviceBusNamespace')]",
                        "ServiceBusConnection__fullyQualifiedNamespace": "[variables('serviceBusNamespace')]",
                        "AzureWebJobsStorage__accountName": "[parameters('sgName')]",
                        "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING": "[variables('storageAccountConnectionStringSecret')]",
                        "WEBSITE_CONTENTSHARE": "[toLower(parameters('functionAppName'))]",
                        "FUNCTIONS_EXTENSION_VERSION": "~3",
                        "APPINSIGHTS_INSTRUMENTATIONKEY": "[variables('appInsightsKeySecret')]",
                        "FUNCTIONS_WORKER_RUNTIME": "dotnet",
                        "WEBSITE_TIME_ZONE": "[variables('timeZone')]",
                        "WEBSITE_ADD_SITENAME_BINDINGS_IN_APPHOST_CONFIG": 1
                    }
                }
            ],
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('planName'))]"
            }
        },
        {
            "type": "Microsoft.Web/sites/slots",
            "name": "[concat(parameters('functionAppName'),'/Staging')]",
            "location": "[resourceGroup().location]",
            "kind": "functionapp",
            "apiVersion": "2016-08-01",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', parameters('functionAppName'))]"
            ],
            "identity": {
                "type": "systemAssigned"
            },
            "properties": {
                "serverFarmId": "[parameters('planName')]"
            },
            "resources": [
                {
                    "name": "appsettings",
                    "type": "config",
                    "apiVersion": "2016-08-01",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites/Slots', parameters('functionAppName'), 'Staging')]"
                    ],
                    "properties": {
                        "CustomerApiKey": "This is the staging setting.",
                        "ServiceBusConfig:Topic": "[parameters('topicName')]",
                        "ServiceBusConfig:Subscription": "[parameters('subscriptionName')]",
                        "ServiceBusConfig:FullyQualifiedNamespace": "[variables('serviceBusNamespace')]",
                        "ServiceBusConnection__fullyQualifiedNamespace": "[variables('serviceBusNamespace')]",
                        "AzureWebJobsStorage__accountName": "[parameters('sgName')]",
                        "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING": "[variables('storageAccountConnectionStringSecret')]",
                        "WEBSITE_CONTENTSHARE": "[toLower(parameters('functionAppName'))]",
                        "FUNCTIONS_EXTENSION_VERSION": "~3",
                        "APPINSIGHTS_INSTRUMENTATIONKEY": "[variables('appInsightsKeySecret')]",
                        "FUNCTIONS_WORKER_RUNTIME": "dotnet",
                        "WEBSITE_TIME_ZONE": "[variables('timeZone')]",
                        "WEBSITE_ADD_SITENAME_BINDINGS_IN_APPHOST_CONFIG": 1
                    }
                }
            ]
        }
    ],
    "outputs": {
        "masterKey": {
            "type": "string",
            "value": "[listkeys(concat(resourceId(resourceGroup().name, 'Microsoft.Web/sites', parameters('functionAppName')), '/host/default'), '2018-11-01').masterKey]"
        }
    }
}
