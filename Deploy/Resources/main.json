{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "environmentName": {
            "type": "string",
            "defaultValue": "TBD"
        },
        "templateSas": {
            "type": "securestring",
            "defaultValue": "TBD"
        },
        "buildNumber": {
            "type": "string",
            "defaultValue": "TBD"
        },        
        "sharedStorageName": {
            "type": "string",
            "defaultValue": "TBD"
        },
        "sharedStorageContainer": {
            "type": "string",
            "defaultValue": "TBD"
        },
        "sgName": {
            "type": "string",            
            "defaultValue": "TBD"
        },
        "sgType":{
            "type": "string",
            "defaultValue": "TBD"
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "name": "[parameters('sgName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2021-04-01",
            "tags": {
                "displayName": "[parameters('sgName')]"
            },
            "location": "[resourceGroup().location]",
            "kind": "StorageV2",
            "sku": {
                "name": "[parameters('sgType')]",
                "tier": "Standard"
            }
        }       
    ],
    "outputs": {}
}